<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="0dp"
                android:weightSum="1"
                tools:context="money.cache.grex.HomeActivity">

    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:padding="5dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_createRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            app:elevation="11dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/_continue" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_bar"
        android:orientation="vertical"
        android:weightSum="1">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/home_map_view"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:visibility="visible"
            tools:context=".HomeActivity" />

        <RelativeLayout
            android:id="@+id/room_card_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/close_room_card_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/floatingActionButton"
                android:background="@color/red"
                android:cropToPadding="false"
                android:elevation="12dp"
                android:visibility="visible"
                app:srcCompat="@drawable/_minus_20" />

            <FrameLayout
                android:id="@+id/home_feed_fragment"
                android:name="grexLayout.SpinnerFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/close_room_card_btn"
                android:visibility="visible">

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
