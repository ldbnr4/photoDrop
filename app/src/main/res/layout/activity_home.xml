<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_home"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="0dp"
                android:weightSum="1"
                tools:context="money.cache.grex.HomeActivity">

    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:padding="5dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_createRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/_continue" />
    </RelativeLayout>


    <fragment android:id="@+id/home_map_view"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_above="@+id/menu_bar"
              tools:context=".HomeActivity"/>
    <FrameLayout
        android:id="@+id/home_feed_fragment"
        android:name="grexLayout.SpinnerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_bar"
        android:layout_alignParentStart="true">

    </FrameLayout>


</RelativeLayout>
